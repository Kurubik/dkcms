<div class="content__col content__col--separate-gallery">
    <div class="content__photo">
        <div class="text-photo">
            <div class="text-photo__photo" style="background-position:center; background-size: cover;background-image: url('{{ app.request.basepath }}/files/{{ record.bot_photo }}')"></div>
            <div class="text-photo__text">{{ record.values.bot_photo.title | raw}}</div>
        </div>
    </div>
    <div class="content__right-col content__right-col--big content__right-col--button">
        <div class="content__col-text content__col-text--float_right">
            {{ record.bot_text_left }}
            <div class="content__col-button">
                <a href="{{ app.request.basepath }}/{{ language }}/{{ record.bot_button_link_left }}" class="button">
                    <span>{{ record.bot_button_left }}</span>
                    <span>{{ record.bot_button_left }}</span>
                </a>
            </div>
        </div>
        <div class="content__col-text content__col-text--float_right">
            {{ record.bot_text_right }}
            <div class="content__col-button">
                <a href="{{ app.request.basepath }}/{{ language }}/{{ record.bot_button_link_right }}" class="button">
                    <span>{{ record.bot_button_right }}</span>
                    <span>{{ record.bot_button_right }}</span>
                </a>
            </div>
        </div>
    </div>
</div>