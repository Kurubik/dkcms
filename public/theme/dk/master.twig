{% spaceless %}

    {% set languageslug = app.paths.current|split('/')[2] %}

    {% if languageslug in ['en', 'ru', 'lv'] %}
        {% set language = languageslug %}
    {% else %}
        {% set language = 'ru' %}
    {% endif %}

    {% set pagescontenttype      = language ~ '-pages' %}

    {% set menumain              = language ~ '-main' %}

{% endspaceless %}